<UserControl x:Class="FaceRecogintion_Database.StudentControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FaceRecogintion_Database"
             mc:Ignorable="d" 
             d:DesignHeight="100" HorizontalAlignment="Stretch">
    <DockPanel DockPanel.Dock="Top" HorizontalAlignment="Stretch">
       
        <Image x:Name="imgStudentDB" Width="100" Height="100" DockPanel.Dock="Left" Margin="8"></Image>
 
            <Label x:Name="lblStudentDB" FontSize="18" DockPanel.Dock="Left"></Label>
        <Label x:Name="lblGroupDB" FontSize="18" DockPanel.Dock="Bottom"></Label>
            <Button x:Name="btnDeleteStudentDB" DockPanel.Dock="Right" Margin="16" FontSize="16" 
                    HorizontalAlignment="Right" Padding="30,8">Удалить</Button>
        
    </DockPanel>
</UserControl>
